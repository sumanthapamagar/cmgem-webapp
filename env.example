VITE_ENVIRONMENT=development
VITE_BUILD_TIME=
VITE_COMMIT_SHA=
VITE_BRANCH=

# Backend Configuration
NODE_ENV=development
PORT=3001
MONGODB_URI=mongodb://localhost:27017/cmgem
